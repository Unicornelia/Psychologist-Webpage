{
  "extends": ["airbnb", "prettier", "plugin:prettier/recommended", "plugin:json/recommended"],
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "plugins": ["react-hooks", "prettier", "@typescript-eslint"],
  "globals": {
    "JSX": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "ignorePatterns": ["index.d.ts"],
  "rules": {
    "arrow-body-style": "off",
    "camelcase": "off",
    "class-methods-use-this": "off",
    "comma-dangle": ["error", "never"],
    "eol-last": ["error", "always"],
    "eqeqeq": "error",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true,
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ],
    "import/order": 0,
    "import/prefer-default-export": 0,
    "json/duplicate-key": ["error", "allowComments"],
    "jsx-a11y/anchor-is-valid": 1,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/label-has-for": [
      2,
      {
        "components": ["Label"],
        "required": {
          "every": ["id"]
        },
        "allowChildren": true
      }
    ],
    "jsx-a11y/media-has-caption": 1,
    "jsx-a11y/no-static-element-interactions": [0, {}],
    "jsx-quotes": [2, "prefer-single"],
    "max-classes-per-file": ["error", 2],
    "max-len": [
      "warn",
      {
        "code": 150,
        "tabWidth": 2,
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreUrls": true
      }
    ],
    "no-dupe-keys": "error",
    "no-multi-spaces": "error",
    "no-nested-ternary": "error",
    "no-plusplus": "off",
    "no-trailing-spaces": "error",
    "no-underscore-dangle": "off",
    "no-use-before-define": "off",
    "@typescript-eslint/no-use-before-define": ["error"],
    "prefer-arrow-callback": "error",
    "prettier/prettier": "error",
    "quotes": [2, "single", "avoid-escape"],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "off",
    "react/destructuring-assignment": [0, {}],
    "react/forbid-prop-types": [0, {}],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx", ".tsx"]
      }
    ],
    "react/jsx-key": 1,
    "react/no-array-index-key": 0,
    "react/state-in-constructor": "off",
    "react/prop-types": [
      0,
      {
        "ignoreFunctionalComponents": 1
      }
    ],
    "react/require-default-props": [
      0,
      { "forbidDefaultForRequired": "warn", "ignoreFunctionalComponents": 1 }
    ],
    "react/prefer-stateless-function": [0, {}],
    "react/jsx-props-no-spreading": "off",
    "react/sort-comp": 0,
    "@typescript-eslint/explicit-module-boundary-types": "off",
    "@typescript-eslint/no-empty-function": "off",
    "@typescript-eslint/no-shadow": "error",
    "no-shadow": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "no-unused-vars": "off"
  }
}
